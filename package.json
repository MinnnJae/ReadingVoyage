{
  "name": "readvoyage",
  "version": "1.0.0",
  "description": "A desktop reading tracker application built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "make": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "reading-tracker",
    "books",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.yourname.readvoyage",
    "productName": "ReadVoyage",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "icon": "./src/assets/icons/icon.png",
      "target": "nsis"
    },
    "mac": {
      "icon": "./src/assets/icons/icon.png",
      "target": "dmg"
    },
    "linux": {
      "icon": "./src/assets/icons/icon.png",
      "target": "AppImage"
    }
  }
}
